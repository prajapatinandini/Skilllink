// models/UserProgress.js
const mongoose = require("mongoose");

const UserProgressSchema = new mongoose.Schema({
  userId: {
    type: mongoose.Schema.Types.ObjectId,
    ref: "User",
    required: true,
    unique: true
  },
  aptitudeCompleted: {
    type: Boolean,
    default: false
  },
  codingUnlocked: {
    type: Boolean,
    default: false
  },
  codingCompleted: {
    type: Boolean,
    default: false
  }
}, { timestamps: true });

module.exports = mongoose.model("UserProgress", UserProgressSchema);
